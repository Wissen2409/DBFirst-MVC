@using DBFirst_MVC.DMO;
@model Product


<div class="card" style="width: 18rem;">

  <div class="card-body">
    <h5 class="card-title">@Model.Name</h5>
    <p class="card-text">@Model.Color</p></div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">@Model.SafetyStockLevel</li>
    <li class="list-group-item">@Model.ListPrice</li>
    <li class="list-group-item">@Model.DaysToManufacture</li>
  </ul>
  <div class="card-body">
    <a href="#" class="card-link">Card link</a>
    <a href="#" class="card-link">Another link</a>
  </div>
</div>    
